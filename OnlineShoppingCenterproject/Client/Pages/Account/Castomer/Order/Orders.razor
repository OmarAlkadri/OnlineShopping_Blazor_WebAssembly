@using OnlineShoppingCenterproject.Core.Dto.OrdersDto
<div>
	<div class="modal fade" id="detay@($"{id}")" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="card">
				<div class="title">Purchase Reciept</div>
				<div class="info">
					<div class="row">
						<div class="col-7">
							<span id="heading">Date</span><br>
							<span id="details">@Order.OrderDate</span>
						</div>
						<div class="col-5 pull-right">
							<span id="heading">Order No.</span><br>
							<span id="details">@Order.Id</span>
						</div>
					</div>
				</div>
				<div class="pricing">
					<div class="row">
						<div class="col-9">
							<span id="name">Shipping :</span>
						</div>
						<div class="col-3">
							<span id="price">10 TL</span>
						</div>
					</div>
				</div>
				<div class="total">
					<div class="row">
						<div class="col-9">Total :</div>
						<div class="col-3"><big>@Order.total TL</big></div>
					</div>
				</div>
				<div class="tracking">
					<div class="title">Takip Sırası</div>
				</div>
				<div class="progress-track">
					<ul id="progressbar">
						<li class="step0 active" id="step1">Sipariş Eklendi</li>
						<li class="step0 text-center" id="step2">Kargoya Verildi</li>
						<li class="step0 text-right" id="step3">Yolda</li>
						<li class="step0 text-right" id="step4">Teslim edilmiş</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

@code {
	[Parameter]
	public OrderDto Order { get; set; }
	[Parameter]
	public int id { get; set; }
}